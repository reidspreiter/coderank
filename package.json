{
  "name": "coderank",
  "displayName": "Coderank",
  "description": "Track your typing habbits from anywhere",
  "version": "0.3.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/reidspreiter/coderank.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "publisher": "reidspreiter",
  "license": "MIT",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "rank",
    "code",
    "tracker",
    "coderank",
    "data",
    "type",
    "typing",
    "characters",
    "track"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderank.flushBuffer",
        "title": "Flush buffer to local storage",
        "icon": "$(desktop-download)"
      },
      {
        "command": "coderank.flushLocalToRemote",
        "title": "Flush local storage to remote repository",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "coderank.initializeWebViewer",
        "title": "Initialize web viewer"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "coderank",
          "name": "Coderank"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Coderank configuration",
      "properties": {
        "coderank.saveCredentials": {
          "type": "boolean",
          "default": false,
          "description": "Save GitHub username and PAT. If this is set, pushing to remote will not prompt for login information unless an error occurs. Default = false"
        },
        "coderank.autoStore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add project data to local storage on document save. Default = true"
        },
        "coderank.debug": {
          "type": "boolean",
          "default": false,
          "description": "Logs events to the console for debug and development purposes. Default = false"
        },
        "coderank.pushReminderFrequency": {
          "type": "string",
          "enum": ["daily", "daily-force", "weekly", "weekly-force", "never"],
          "default": "weekly",
          "description": "How often coderank reminds you to push your data to remote on startup. Options: 'daily', 'daily-force', 'weekly', 'weekly-force', or 'never'. An option with '-force' will avoid the reminder and automatically prompt you to login. If `coderank.saveCredentials` is set, the push process will start automatically. Default = 'weekly'"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "coderank.flushBuffer",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.flushLocalToRemote",
          "when": "view == coderank",
          "group": "navigation"
        },
        {
          "command": "coderank.initializeWebViewer",
          "when": "view == coderank",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && npm run copy-assets",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier src --write",
    "test": "node ./out/test/runTest.js",
    "copy-assets": "copyfiles -u 2 src/web/src/index.html src/web/src/static/** out/web"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "tabWidth": 4,
    "singleQuote": false
  },
  "devDependencies": {
    "@types/mocha": "10.0.7",
    "@types/node": "20.x",
    "@types/sinon": "17.0.3",
    "@types/vscode": "1.92.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copyfiles": "2.4.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-prettier": "5.2.1",
    "glob": "11.0.1",
    "mocha": "11.1.0",
    "prettier": "3.3.3",
    "sinon": "19.0.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "simple-git": "3.26.0",
    "zod": "3.23.8"
  }
}